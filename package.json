{
  "name": "size-limit-action",
  "version": "0.1.0",
  "private": "true",
  "module": "src/index.ts",
  "main": "dist/index.js",
  "type": "module",
  "size-limit": [
    {
      "path": "./dist/index.js",
      "limit": "4500 ms"
    }
  ],
  "scripts": {
    "types:check": "tsc --noEmit",
    "format:check": "biome format",
    "format:fix": "biome format --write",
    "lint:check": "biome lint",
    "lint:fix": "biome lint --write",
    "check": "run-p *:check",
    "fix": "run-s *:fix",
    "build": "bun build.ts && size-limit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@size-limit/preset-app": "^11.2.0",
    "@types/bun": "latest",
    "lefthook": "1.13.6",
    "npm-run-all2": "8.0.4",
    "size-limit": "11.2.0"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "markdown-table": "^3.0.4",
    "package-manager-detector": "^1.5.0",
    "pretty-bytes": "^7.1.0"
  },
  "packageManager": "bun@1.3.0"
}
