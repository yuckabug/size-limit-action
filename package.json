{
  "name": "size-limit-action",
  "private": "true",
  "module": "src/index.ts",
  "type": "module",
  "size-limit": [
    {
      "path": "./dist/index.js",
      "limit": "5 KB"
    }
  ],
  "scripts": {
    "types:check": "tsc --noEmit",
    "format:check": "biome format",
    "format:fix": "biome format --write",
    "lint:check": "biome lint",
    "lint:fix": "biome lint --write",
    "check": "run-p *:check",
    "fix": "run-s *:fix",
    "build": "bunup && size-limit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@size-limit/preset-small-lib": "11.2.0",
    "@types/bun": "latest",
    "bunup": "0.14.20",
    "lefthook": "1.13.6",
    "npm-run-all2": "8.0.4",
    "size-limit": "11.2.0"
  },
  "packageManager": "bun@1.3.0"
}
